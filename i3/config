# i3bar
bar {
    font pango: Noto Sans Regular 12                       # ãƒãƒ¼ã®ãƒ•ã‚©ãƒ³ãƒˆè¨­å®š
    status_command i3blocks -c ~/.config/i3/i3blocks.conf  # ã‚¹ãƒ†ãƒ¼ã‚¿ã‚¹ãƒãƒ¼ã®è¨­å®šãƒ•ã‚¡ã‚¤ãƒ«
    position bottom                                        # ãƒãƒ¼ã®ä½ç½®
    tray_padding 0
    strip_workspace_numbers yes                            # ãƒ¯ãƒ¼ã‚¯ã‚¹ãƒšãƒ¼ã‚¹ç•ªå·ã®è¡¨ç¤ºã‚’æŠ‘åˆ¶ã™ã‚‹è¨­å®š
                                                           # å½¢å¼ã€Œ[n][:][NAME]ã€ã®ãƒ¯ãƒ¼ã‚¯ã‚¹ãƒšãƒ¼ã‚¹åã‹ã‚‰ç•ªå·ã‚’å‰Šé™¤ã—ã¦è¡¨ç¤º
    # è‰²è¨­å®š
    colors {
        separator          $purple
        background         $darkgrey
        statusline         $white
        # ãƒ¯ãƒ¼ã‚¯ã‚¹ãƒšãƒ¼ã‚¹
        focused_workspace  $mediumgrey $grey $darkgrey $purple
        active_workspace   $lightblue $mediumgrey $darkgrey $purple
        inactive_workspace $darkgrey $darkgrey $grey $purple
        urgent_workspace   $urgentred $urgentred $white $purple
    }
}

