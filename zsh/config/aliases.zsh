# ls -> exa
alias ls='exa --color=auto'
alias la='exa -la'
alias ll='exa -l'

# top -> bpytop
alias top='bpytop'

# cat -> bat
alias cat='bat'

# nvim
alias v='nvim'

# clear
alias c='clear'
alias cc='c &&'

# 実行前確認
alias rm='rm -i'
alias mv='mv -i'
alias cp='cp -i'

# Network
alias ports='netstat -tulanp'          # 開いているポートと使用中のプロセスを表示
alias myip='curl http://ipinfo.io/ip'  # 自分のグローバルIP
